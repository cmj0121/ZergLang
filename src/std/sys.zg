# sys - Standard library system utilities
# Wraps the _sys runtime module

fn platform() -> str {
    return _sys.os()
}

fn arch() -> str {
    return _sys.arch()
}

fn args() -> list {
    return _sys.args()
}

fn env(name, default = nil) {
    val := _sys.env(name)
    if val == "" {
        if default == nil {
            return nil
        }
        return default
    }
    return val
}

fn exit(code) {
    _sys.exit(code)
}
